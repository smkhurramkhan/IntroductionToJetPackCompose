<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.introductiontojetpackcompose">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IntroductionToJetPackCompose"
        tools:targetApi="31">
        <activity
            android:name=".MoreLayouts"
            android:exported="false"
            android:label="@string/title_activity_more_layouts"
            android:theme="@style/Theme.IntroductionToJetPackCompose" />
        <activity
            android:name=".HomeScreenActivity"
            android:exported="false"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/Theme.IntroductionToJetPackCompose" />
        <activity
            android:name=".ComposeComponentsActivity"
            android:exported="false"
            android:label="@string/title_activity_compose_components"
            android:theme="@style/Theme.IntroductionToJetPackCompose" />
        <activity
            android:name=".MaterialActivity"
            android:exported="false"
            android:label="@string/title_activity_material"
            android:theme="@style/Theme.IntroductionToJetPackCompose" />
        <activity
            android:name=".LayoutActivity"
            android:exported="false"
            android:label="@string/title_activity_layout"
            android:theme="@style/Theme.IntroductionToJetPackCompose" />
        <activity
            android:name=".ui.ui.MoreViewActivity"
            android:exported="false"
            android:label="@string/title_activity_more_view"
            android:theme="@style/Theme.IntroductionToJetPackCompose" />
        <activity
            android:name=".ui.ui.ListsActivity"
            android:exported="false"
            android:label="@string/title_activity_lists"
            android:theme="@style/Theme.IntroductionToJetPackCompose" />
        <activity
            android:name=".ui.SnackBarAndTextField"
            android:exported="false"
            android:label="@string/title_activity_snack_bar_and_text_field"
            android:theme="@style/Theme.IntroductionToJetPackCompose" />
        <activity
            android:name=".ui.StateActivity"
            android:exported="false"
            android:label="@string/title_activity_state"
            android:theme="@style/Theme.IntroductionToJetPackCompose" />
        <activity
            android:name=".ui.ImageCardActivity"
            android:exported="false"
            android:label="@string/title_activity_image_card"
            android:theme="@style/Theme.IntroductionToJetPackCompose" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.IntroductionToJetPackCompose" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>